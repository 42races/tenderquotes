<!DOCTYPE html>
<html>
<head>
  <title>The Amazing Factory</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'shared/header' %>
  <% if notice.present? %>
    <p id='notice'><%= notice %></p>
  <% end %>
  <div class='wrapper'>
    <div class='body'>
      <%= yield %>
    </div>
  </div>
  <%= render 'shared/footer' %>
</body>
</html>
