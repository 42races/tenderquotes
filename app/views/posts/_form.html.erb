<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.messages.each do |field, msgs| %>
        <li><%= msgs.join(' ') %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <a href="http://www.google.com/inputtools/try/" target="_blank">Install google language tools to type in Malayalam</a>
  <div class="form-group">
    <%= f.label :title, "Said by" %>
    <%= f.text_field :title, placeholder: 'Said by', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Quote" %>
    <%= f.text_area :content, placeholder: 'Quote it here', class: 'form-control', rows: "6" %>
  </div>
  <%= f.submit "Save", class: "btn btn-default" %>
<% end %>
